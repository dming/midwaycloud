{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2018",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    // "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "paths": {
      "@dming/mwcloud-*": ["packages/mwcloud-*/src"],
      "midwaycloud": ["packages/midwaycloud/src"]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
    "examples/*/src",
    "examples/*/test"
  ]
}
